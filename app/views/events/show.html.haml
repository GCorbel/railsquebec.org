%section.worldMap
  %header#sectionHeader
    %hgroup
      %h1
        %span 
          LES
        ÉVÉNEMENTS
  %nav#secondaryNav
    %div#secondaryNavContainer
      %ul
        %li
          = link_to "Retour aux événements", events_path, :class => "navButton"
        - if can? :update, @event
          %li
            = link_to "Editer", edit_event_path(@event), :title => "navButton"
  .theContent
    %article#theEvent
      %hgroup
        %h1
          = @event.title
      #theEventInformation
        #theEventAddress
          Adresse :
          %span
            = link_to "#{@event.street} #{@event.postal_code} #{@event.city}", "http://maps.google.com/maps?q=#{@event.street} #{@event.postal_code} #{@event.city}","data-skip-pjax" => true, :target => "_blank"
        #theEventDate
          Date :
          %span
            = l(@event.date, :format => :tiny)
        #theEventHour
          Heure :
          %span
            = l(@event.date, :format => :short)
    #theEventDescription.userMarkdown
      = markdown @event.description
      %br
      = link_to @event.website, @event.website, :id => "theEventWebSite","data-skip-pjax" => true, :target => "_blank"
   
      
