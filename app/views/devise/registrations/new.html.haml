%section#connection.sectionTitle
  %hgroup
    %h1
      %span#arabesqueLeft &nbsp;
      ENREGISTREMENT
      %span#arabesqueRight &nbsp;
%nav#connectionNav.secondaryNav
  = render :partial => "devise/shared/links"
.contentBackground
  = simple_form_for(resource, :url => registration_path(resource),:html => {:id => "newUserForm"}) do |f|
    %fieldset
      %legend Inscription
      #newUserLeft
        = f.input :username, :autofocus => "autofocus"
        = f.input :email
        = f.input :github, :placeholder => "railsfrance"
        = f.input :twitter, :placeholder => "railsfrance"
        = f.input :website, :placeholder => "http://www.railsfrance.org"
      #newUserRight
        = f.input :city
        = f.input :postal_code
        = f.input :password, :required => true
        = f.input :password_confirmation, :required => true
        = f.button :submit, "S'enregister"
